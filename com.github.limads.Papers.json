{
    "app-id" : "com.github.limads.Papers",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "42",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "papers",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "Papers=debug"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [

	{
            "name" : "icu",
            "builddir" : true,
            "buildsystem" : "simple",
            "sources" : [
            	{
            	    "type" : "archive",
            	    "url" : "https://github.com/unicode-org/icu/releases/download/release-69-1/icu4c-69_1-src.tgz",
            	    "sha256" : "4cba7b7acd1d3c42c44bb0c14be6637098c7faf2b330ce876bc5f3b915d09745"
            	}
            ],
            "build-commands" : [
            	"mkdir build",
		"cd build",
		"../icu/source/runConfigureICU Linux --prefix=/app",
		"make check",
		"make install"
            ]
        },

        {
            "name": "poppler",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=release",
                "-DENABLE_QT5:BOOL=true",
                "-DCMAKE_INSTALL_LIBDIR:PATH=/app/lib",
                "-DENABLE_BOOST=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://poppler.freedesktop.org/poppler-21.11.0.tar.xz",
                    "sha256": "31b76b5cac0a48612fdd154c02d9eca01fd38fb8eaa77c1196840ecdeb53a584"
                }
            ]
        },

        {
            "name" : "Papers",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/diego/Software/papers"
                }
            ]
        }
    ]
}
