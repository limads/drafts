{
    "app-id" : "com.github.limads.Papers",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : ["org.freedesktop.Sdk.Extension.rust-stable"],
    "build-options": { "append-path": "/usr/lib/sdk/rust-stable/bin" },
    "command" : "papers",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=xdg-documents",
        "--filesystem=home",
	"--env=RUST_BACKTRACE=1"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],

    "build-options": {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ]
    },

    "modules" : [
        {
            "name" : "papers",
            "builddir" : true,
            "buildsystem" : "simple",
            "build-commands" : ["cargo build"],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/diego/Software/papers"
                }
            ]
        }
    ]
}

